<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#88090B47"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"

    app:contentPadding="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstrainLayout"
        android:textStyle="bold"

        android:layout_width="356dp"
        android:layout_height="208dp">

        <TextView
            android:id="@+id/tvIdPago"
            android:layout_width="213dp"
            android:layout_height="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCodigoContratoPago"
            android:layout_width="212dp"
            android:layout_height="19dp"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIdPago" />

        <TextView
            android:id="@+id/tvMonto"
            android:layout_width="212dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCodigoContratoPago" />

        <TextView
            android:id="@+id/tvFechaPago"
            android:layout_width="212dp"
            android:textStyle="bold"

            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMonto" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textStyle="bold"

            android:text="Id pago:"
            app:layout_constraintEnd_toStartOf="@+id/tvIdPago"
            app:layout_constraintHorizontal_bias="0.831"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:text="Codigo contrato:"
            app:layout_constraintEnd_toStartOf="@+id/tvCodigoContratoPago"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIdPago" />

        <TextView
            android:id="@+id/tvInfo7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:layout_marginTop="20dp"
            android:text="Monto:"
            app:layout_constraintEnd_toStartOf="@+id/tvMonto"
            app:layout_constraintHorizontal_bias="0.83"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCodigoContratoPago" />

        <TextView
            android:id="@+id/tvInfo8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            android:layout_marginTop="20dp"
            android:text="Fecha de pago:"
            app:layout_constraintEnd_toStartOf="@+id/tvFechaPago"
            app:layout_constraintHorizontal_bias="0.653"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMonto" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>